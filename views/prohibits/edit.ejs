<%- include("../partials/header") %>

	<h1 class="form-h1">Edit Prohibit</h1>
	<div class="row">
		<div style="width: 50%; margin: 25px auto;">
			<form action="/prohibits/<%= prohibit._id %>?_method=PUT" method="POST">
				<div class="form-row">
					<div class="form-group col-md-6">
					  <label for="name">Prohibit:</label>
					  <input id="name" class="form-control" type="text" name="prohibit[name]" value="<%= prohibit.name %>" required>
					</div>
					<div class="form-group col-md-6">
					  <label for="example">Example:</label>
					  <input id="example" class="form-control" type="text" name="prohibit[example]" value="<%= prohibit.example %>">
					</div>
				</div>
				<div class="form-row">
					<div class="form-group col-md-6">
					  <label for="screenshot1">Screenshot 1:</label>
					  <input id="screenshot1" class="form-control" type="text" name="prohibit[screenshot1]" value="<%= prohibit.screenshot1 %>">
					</div>
					<div class="form-group col-md-6">
					  <label for="screenshot2">Screenshot 2:</label>
					  <input id="screenshot2" class="form-control" type="text" name="prohibit[screenshot2]" value="<%= prohibit.screenshot2 %>">
					</div>
				</div>
				<div class="form-row">
					<div class="form-group col-md-6">
					  <label for="screenshot3">Screenshot 3:</label>
					  <input id="screenshot3" class="form-control" type="text" name="prohibit[screenshot3]" value="<%= prohibit.screenshot3 %>">
					</div>
				</div>
				<div class="form-row">
					<div class="form-group col-md-12">
						<label for="comment">Comment:</label>
						<textarea id="comment" rows="3" class="form-control" name="prohibit[comment]"><%= prohibit.comment %></textarea>
					</div>
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-lg">Edit Prohibit</button>
				</div>
			</form>
			<a href="/prohibits">Go Back</a>
		</div>
	</div>

<%- include("../partials/footer") %>