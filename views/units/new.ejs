<%- include("../partials/header") %>

	<h1 class="form-h1">Add a new Unit of measure</h1>
	<div class="row">
		<div style="width: 50%; margin: 25px auto;">
			<form action="/units" method="POST">
				<div class="form-row">
					<div class="form-group col-md-6">
					  <label for="name">Unit of measure:</label>
					  <input id="name" class="form-control" type="text" name="unit[name]" placeholder="Unit of measure" required>
					</div>
					<div class="form-group col-md-6">
					  <label for="symbol">Brazilian:</label>
					  <input id="symbol" class="form-control" type="text" name="unit[symbol]" placeholder="Symbol" required>
					</div>
				</div>
				<div class="form-row">
					<div class="form-group col-md-6">
					  <label for="screenshot1">Screenshot 1:</label>
					  <input id="screenshot1" class="form-control" type="text" name="unit[screenshot1]" placeholder="Screenshot 1 url">
					</div>
					<div class="form-group col-md-6">
					  <label for="screenshot2">Screenshot 2:</label>
					  <input id="screenshot2" class="form-control" type="text" name="unit[screenshot2]" placeholder="Screenshot 2 url">
					</div>
				</div>
				<div class="form-row">
					<div class="form-group col-md-6">
					  <label for="screenshot3">Screenshot 3:</label>
					  <input id="screenshot3" class="form-control" type="text" name="unit[screenshot3]" placeholder="Screenshot 3 url">
					</div>
				</div>
				<div class="form-row">
					<div class="form-group col-md-12">
							<label for="comment">Comment:</label>
							<textarea rows="3" id="comment" class="form-control" name="unit[comment]" placeholder="Comment..."></textarea>
					</div>
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-lg">Add Unit of measure</button>
				</div>
			</form>
			<a href="/units">Go Back</a>
		</div>
	</div>

<%- include("../partials/footer") %>