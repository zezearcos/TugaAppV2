<%- include("../partials/header") %>

	<h1 class="form-h1">Edit Unit of measure</h1>
	<div class="row">
		<div style="width: 50%; margin: 25px auto;">
			<form action="/units/<%= unit._id %>?_method=PUT" method="POST">
				<div class="form-row">
					<div class="form-group col-md-6">
					  <label for="name">Unit of measure:</label>
					  <input id="name" class="form-control" type="text" name="unit[name]" value="<%= unit.name %>" required>
					</div>
					<div class="form-group col-md-6">
					  <label for="symbol">Symbol:</label>
					  <input id="symbol" class="form-control" type="text" name="unit[symbol]" value="<%= unit.symbol %>" required>
					</div>
				</div>
				<div class="form-row">
					<div class="form-group col-md-6">
					  <label for="screenshot1">Screenshot 1:</label>
					  <input id="screenshot1" class="form-control" type="text" name="unit[screenshot1]" value="<%= unit.screenshot1 %>">
					</div>
					<div class="form-group col-md-6">
					  <label for="screenshot2">Screenshot 2:</label>
					  <input id="screenshot2" class="form-control" type="text" name="unit[screenshot2]" value="<%= unit.screenshot2 %>">
					</div>
				</div>
				<div class="form-row">
					<div class="form-group col-md-6">
					  <label for="screenshot3">Screenshot 3:</label>
					  <input id="screenshot3" class="form-control" type="text" name="unit[screenshot3]" value="<%= unit.screenshot3 %>">
					</div>
				</div>
				<div class="form-row">
					<div class="form-group col-md-12">
						<label for="comment">Comment:</label>
						<textarea id="comment" rows="3" class="form-control" name="unit[comment]"><%= unit.comment %></textarea>
					</div>
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-lg">Edit Unit of measure</button>
				</div>
			</form>
			<a href="/units">Go Back</a>
		</div>
	</div>

<%- include("../partials/footer") %>