<%- include("../partials/header") %>

	<h1 class="form-h1">Edit Invalid page</h1>
	<div class="row">
		<div style="width: 50%; margin: 25px auto;">
			<form action="/invalids/<%= invalid._id %>?_method=PUT" method="POST">
				<div class="form-row">
					<div class="form-group col-md-6">
					  <label for="website">Invalid page url:</label>
					  <input id="website" class="form-control" type="text" name="invalid[website]" value="<%= invalid.website %>" required>
					</div>
					<div class="form-group col-md-6">
					  <label for="category">Category error:</label>
					  <input id="category" class="form-control" type="text" name="invalid[category]" value="<%= invalid.category %>" required>
					</div>
				</div>
				<div class="form-row">
					<div class="form-group col-md-6">
					  <label for="screenshot1">Screenshot 1:</label>
					  <input id="screenshot1" class="form-control" type="text" name="invalid[screenshot1]" value="<%= invalid.screenshot1 %>">
					</div>
					<div class="form-group col-md-6">
					  <label for="screenshot2">Screenshot 2:</label>
					  <input id="screenshot2" class="form-control" type="text" name="invalid[screenshot2]" value="<%= invalid.screenshot2 %>">
					</div>
				</div>
				<div class="form-row">
					<div class="form-group col-md-6">
					  <label for="screenshot3">Screenshot 3:</label>
					  <input id="screenshot3" class="form-control" type="text" name="invalid[screenshot3]" value="<%= invalid.screenshot3 %>">
					</div>
				</div>
				<div class="form-row">
					<div class="form-group col-md-12">
						<label for="comment">Comment:</label>
						<textarea id="comment" rows="3" class="form-control" name="invalid[comment]"><%= invalid.comment %></textarea>
					</div>
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-lg">Edit Invalid page</button>
				</div>
			</form>
			<a href="/invalids">Go Back</a>
		</div>
	</div>

<%- include("../partials/footer") %>